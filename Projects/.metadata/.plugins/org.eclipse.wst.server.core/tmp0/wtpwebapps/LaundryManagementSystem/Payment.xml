<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
          http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
          version="3.1">

    <!-- Insert data part -->
    <servlet>
        <servlet-name>PaymentCreateServlet</servlet-name>
        <servlet-class>Servlet.PaymentCreateServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PaymentCreateServlet</servlet-name>
        <url-pattern>/PaymentCreateServlet</url-pattern>
    </servlet-mapping>

    <!-- Read data part -->
    <servlet>
        <servlet-name>PayReadServlet</servlet-name>
        <servlet-class>Servlet.PayReadServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PayReadServlet</servlet-name>
        <url-pattern>/PayReadServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Update data part -->
    <servlet>
    <servlet-name>PayDeleteServlet</servlet-name>
    <servlet-class>Servlet.PayDeleteServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>PayDeleteServlet</servlet-name>
    <url-pattern>/PayDeleteServlet</url-pattern>
</servlet-mapping>

    
        <!-- delete data part -->
    <servlet>
        <servlet-name>PaymentDeleteServlet</servlet-name>
        <servlet-class>Servlet.PaymentDeleteServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PaymentDeleteServlet</servlet-name>
        <url-pattern>/PaymentDeleteServlet</url-pattern>
    </servlet-mapping>
    
</web-app>

