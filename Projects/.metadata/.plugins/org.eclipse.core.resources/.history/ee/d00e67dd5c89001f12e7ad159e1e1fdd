package servlet;

import java.io.IOException;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.MultipartConfig;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import model.OrderModel;
import service.laundryService;

@WebServlet("/addOrder")
@MultipartConfig(maxFileSize = 16177215) 
public class addOrder extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    public addOrder() {
        super();
    }

	protected void doPost(HttpServletRequest request, HttpServletResponse response) 
	        throws ServletException, IOException {
		
		OrderModel mMod = new OrderModel();
		
		mMod.setName(request.getParameter("name"));
		mMod.setAddress(request.getParameter("address"));  
		mMod.setPhone(request.getParameter("phone"));   
		mMod.setPickUpdate(request.getParameter("pickUpdate"));
		mMod.setPickUptime(request.getParameter("pickUptime"));  

		
	
		
		laundryService service = new laundryService();
		service.insertData(mMod);
		
		response.sendRedirect("ShowData");
	}
}
