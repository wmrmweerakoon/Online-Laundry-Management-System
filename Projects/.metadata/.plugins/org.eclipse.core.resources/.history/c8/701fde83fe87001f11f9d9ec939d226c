	<script>
        // Validation Function for Tracking Form
        function validateForm() {
            const orderNumber = document.getElementById('order-number').value;
            const errorMessage = document.getElementById('error-message');

            // Check if the order number field is empty
            if (orderNumber === "") {
                errorMessage.textContent = "Order number cannot be empty.";
                return false;
            }

            // Simple validation: Ensure order number has at least 6 digits
            const orderNumberPattern = /^[0-9]{6,}$/;
            if (!orderNumberPattern.test(orderNumber)) {
                errorMessage.textContent = "Please enter a valid order number (at least 6 digits).";
                return false;
            }

            // Clear error message if input is valid
            errorMessage.textContent = "";

            // Show success alert
            alert('Your order has been successfully tracked!');
            
            // Fetch order status
            fetchOrderStatus();
            
            // Return true to allow form submission
            return true;
        }

        // Function to simulate fetching order status
        function fetchOrderStatus() {
            // Placeholder for dynamic content update.
            const orderStatusElement = document.getElementById('order-status');
            orderStatusElement.style.display = 'block';
            orderStatusElement.innerHTML = `
                <h2>Order Status</h2>
                <p>Your order is currently being processed. We will update you with further details soon.</p>
            `;
        }
    </script>

