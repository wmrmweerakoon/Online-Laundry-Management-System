package Servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.RequestDispatcher;

import Model.CusModel;
import Services.CusServices;

@WebServlet("/RegisterServlet")
public class RegisterServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    public RegisterServlet() {
        super();
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        CusModel cuModel = new CusModel();
        
        // Set customer details from form input
        cuModel.setCusName(request.getParameter("fullname"));
        cuModel.setCuName(request.getParameter("username"));
        cuModel.setCusEmail(request.getParameter("email"));
        cuModel.setCusPassword(request.getParameter("password"));
        cuModel.setConfPassword(request.getParameter("confirmPassword"));
        
        CusServices service = new CusServices();
        
        // Insert data and check if it was successful
        boolean isInserted = false;
		try {
			isInserted = service.insertData(cuModel);
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

        if (isInserted) {
            // Success message
            request.setAttribute("successMessage", "Registration successful!");
        } else {
            // Error message
            request.setAttribute("errorMessage", "Registration failed. Please try again.");
        }

        // Forward back to a page (e.g., registration or home page)
        RequestDispatcher dis = request.getRequestDispatcher("Home.jsp");
        dis.forward(request, response);
    }

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        doPost(request, response);
    }
}
